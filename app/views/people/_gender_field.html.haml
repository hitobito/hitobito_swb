= field_set_tag do
  %div{data: { controller: 'form-field-toggle', 'form-field-toggle-hide-on-value': Person::GENDERS}}
    %div
      = f.labeled(:gender) do
        - (Person::GENDERS + ['']).each do |key|
          = f.inline_radio_button(:gender, key, entry.gender_label(key), true, data: { action: 'input->form-field-toggle#toggle'})

    %div{data: { 'form-field-toggle-target': 'toggle' }, class: entry.gender.blank? ? "" : "hidden"}
      = f.labeled(:ts_gender) do
        - (Person::GENDERS).each do |key|
          = f.inline_radio_button(:ts_gender, key, entry.gender_label(key))
